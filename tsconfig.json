{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "jsx": "react",
        "allowJs": true,
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ],
        "paths": {
            "style/*": [
                "src/style/*"
            ],
        }

    },
    "include": [
        "src",
        "types"
    ]
}